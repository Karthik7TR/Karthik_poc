<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 	   xmlns:p="http://www.springframework.org/schema/p"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       					   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
						   http://www.springframework.org/schema/context
						   http://www.springframework.org/schema/context/spring-context-4.0.xsd"> 
      
	<bean id="novusFactory" class="com.thomsonreuters.uscl.ereader.gather.services.NovusFactoryImpl"
		  p:novusEnvironment="${novus.environment}"    
		  p:productName="EBOOKGENERATOR-USCL"
		  p:businessUnit="WestCobalt"/>
		  
	<bean id="novusUtility" class="com.thomsonreuters.uscl.ereader.gather.services.NovusUtility"
		  p:docRetryCount="3"    
		  p:tocRetryCount="3"
		  p:nortRetryCount="3"
		  p:imgRetryCount="3"
		  p:showMissDocsList="Y"/>		  

	<bean id="docService" class="com.thomsonreuters.uscl.ereader.gather.services.DocServiceImpl"
		  p:novusFactory-ref="novusFactory"
		  p:novusUtility-ref="novusUtility"/>

	<bean id="tocService" class="com.thomsonreuters.uscl.ereader.gather.services.TocServiceImpl"
		  p:novusFactory-ref="novusFactory"
		  p:novusUtility-ref="novusUtility"/>
	
	<bean id="nortService" class="com.thomsonreuters.uscl.ereader.gather.services.NortServiceImpl"
		  p:novusFactory-ref="novusFactory"
		  p:novusUtility-ref="novusUtility"/>
		  
	<bean id="novusImgService" class="com.thomsonreuters.uscl.ereader.gather.services.NovusImgServiceImpl"
		  p:novusFactory-ref="novusFactory"
		  p:novusUtility-ref="novusUtility"
		  p:missingImageGuidsFileBasename="missing_image_guids.txt"		  
		  p:sleepIntervalBetweenImages="500"/>

	<!-- Below is used to fetch the initial misc config (log4j logging levels) from a generator REST service that serves up the MiscConfig object
		 as read from the database. --> 
	<bean id="miscConfigSyncService" class="com.thomsonreuters.uscl.ereader.gather.services.GathererMiscConfigSyncService"
		  p:novusFactory-ref="novusFactory"/>

	<bean class="com.thomsonreuters.uscl.ereader.gather.services.GathererAppConfigLoader"/>

</beans>