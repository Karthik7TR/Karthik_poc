<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
						   http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
        				   http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

  	<bean id="bookDefinitionService" class="com.thomsonreuters.uscl.ereader.core.book.service.BookDefinitionServiceImpl"
  		  p:bookDefinitionDao-ref="bookDefinitionDao"/>
  		  
  	<bean id="codeService" class="com.thomsonreuters.uscl.ereader.core.book.service.CodeServiceImpl"
  		  p:codeDao-ref="codeDao"/>
  		  
  	<bean id="authorService" class="com.thomsonreuters.uscl.ereader.core.book.service.AuthorServiceImpl"
  		  p:authorDAO-ref="authorDao"/>
  		  
    <bean id="eBookAuditService" class="com.thomsonreuters.uscl.ereader.core.book.service.EBookAuditServiceImpl"
  		  p:eBookAuditDAO-ref="eBookAuditDao" />	
  
	<bean id="publishingStatsService" class="com.thomsonreuters.uscl.ereader.stats.service.PublishingStatsServiceImpl"
		  p:publishingStatsDAO-ref="publishingStatsDao"/>
		  
	<bean id="jobService" class="com.thomsonreuters.uscl.ereader.core.job.service.JobServiceImpl"
		  p:jobDao-ref="jobDao"
		  p:jobExplorer-ref="jobExplorer"/>
		  
	<bean id="libraryListService" class="com.thomsonreuters.uscl.ereader.core.library.service.LibraryListServiceImpl"
  		  p:libraryListDao-ref="libraryListDao"
  		  p:bookDefinitionDao-ref="bookDefinitionDao"
  		  p:authorService-ref="authorService"
  		  p:publishingStatsService-ref="publishingStatsService"
  		  p:proviewClient-ref="proviewClient"/>
  		  
  	<bean id="editBookDefinitionService" class="com.thomsonreuters.uscl.ereader.mgr.web.controller.bookdefinition.edit.EditBookDefinitionService"
  		  p:codeService-ref="codeService"/>


    <!-- Response to job restart and stop requests -->
    <bean id="jibxJobOperationResponseMarshaller" class="org.springframework.oxm.jibx.JibxMarshaller">
        <property name="targetClass" value="com.thomsonreuters.uscl.ereader.core.job.domain.JobOperationResponse"/>
    </bean>
    	<bean id="jobOperationResponseMessageConverter" class="org.springframework.http.converter.xml.MarshallingHttpMessageConverter">
    	<property name="marshaller" ref="jibxJobOperationResponseMarshaller" />
        <property name="unmarshaller" ref="jibxJobOperationResponseMarshaller" />
    </bean>
	<bean id="managerRestTemplate" class="org.springframework.web.client.RestTemplate">
      <property name="messageConverters">
        <list>
          <ref bean="jobOperationResponseMessageConverter"/>
        </list>
      </property>
	</bean>  	
		  
  	<bean id="managerService" class="com.thomsonreuters.uscl.ereader.mgr.web.service.ManagerServiceImpl"
  		  p:generatorContextUrl="${generator.context.url}"
  		  p:restTemplate-ref="managerRestTemplate"/>
  		  
	<bean id="ssh" class="com.thomsonreuters.uscl.ereader.util.Ssh"/>
	
	<bean id="emailNotification" class="com.thomsonreuters.uscl.ereader.util.EmailNotification"/>
	
	<bean id="jobCleanupService" class="com.thomsonreuters.uscl.ereader.core.job.service.JobCleanupServiceImpl"
		 p:jobCleanupDao-ref="jobCleanupDao"/>
	
	<bean id="serverAccessService" class="com.thomsonreuters.uscl.ereader.core.job.service.ServerAccessServiceImpl"
		  p:ssh-ref="ssh"
		  p:emailNotification-ref="emailNotification"
		  p:jobCleanupService-ref="jobCleanupService"/>

  		  
</beans>