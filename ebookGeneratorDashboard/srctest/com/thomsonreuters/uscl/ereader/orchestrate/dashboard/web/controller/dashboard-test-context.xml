<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  	   xmlns:p="http://www.springframework.org/schema/p"
  	   xmlns:context="http://www.springframework.org/schema/context"
  	   xmlns:util="http://www.springframework.org/schema/util"
  	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  	   					   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
  	   					   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
    <!-- component-scan for @Controller, @Service, @Component, etc... annotations -->
  	<context:component-scan base-package="com.thomsonreuters.uscl.ereader.orchestrate.dashboard"/>
  	<bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping"/>
  
  	<bean id="environmentName" class="java.lang.String">
  		<constructor-arg value="junitTestEnvironment"/>
  	</bean>
  	<bean id="engineContextUrl" class="java.net.URL">
  		<constructor-arg value="http://junitHost:1234/junitEngineContext"/>
  	</bean>
  	
  	<bean id="queueConnectionFactory" class="com.thomsonreuters.uscl.ereader.orchestrate.core.mock.MockQueueConnectionFactory"/>
  	<bean id="highPriorityQueue" class="com.thomsonreuters.uscl.ereader.orchestrate.core.mock.MockQueue"/>
  	<bean id="normalPriorityQueue" class="com.thomsonreuters.uscl.ereader.orchestrate.core.mock.MockQueue"/>
  	<bean id="jmsTemplate" class="com.thomsonreuters.uscl.ereader.orchestrate.core.mock.MockJmsTemplate"
		  p:connectionFactory-ref="queueConnectionFactory"/>
  	<bean id="jobRunner" class="com.thomsonreuters.uscl.ereader.orchestrate.core.JmsJobRunner"
  			p:jmsTemplate-ref="jmsTemplate"
  			p:highPriorityQueue-ref="highPriorityQueue"
  			p:normalPriorityQueue-ref="normalPriorityQueue"/>
  	
  	<bean id="dataSource" class="com.thomsonreuters.uscl.ereader.orchestrate.core.mock.MockDataSource"/>
  	<bean id="jdbcTemplate" class="com.thomsonreuters.uscl.ereader.orchestrate.core.mock.MockJdbcTemplate"
  		  p:dataSource-ref="dataSource"/>
  	<bean id="dashboardDao" class="com.thomsonreuters.uscl.ereader.orchestrate.dashboard.dao.MockDashboardDao"/>
  	<bean id="jobExplorer" class="com.thomsonreuters.uscl.ereader.orchestrate.dashboard.service.MockJobExplorer"/>
  	<!-- The list of books created from generator job pathway. -->
	<util:list id="bookCodes" value-type="java.lang.String">
    	<value>junitBook1</value>
    	<value>junitBook2</value>
    	<value>junitBook3</value>
	</util:list>
  	<bean id="dashboardService" class="com.thomsonreuters.uscl.ereader.orchestrate.dashboard.web.service.DashboardServiceImpl"
  		  p:dao-ref="dashboardDao"
  		  p:jobExplorer-ref="jobExplorer"
  		  p:bookCodes="bookCodes"/>
  	  
</beans>