<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        				   http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd">

  <!-- Data source from naming service (JNDI) -->
  <jee:jndi-lookup id="dataSource" jndi-name="jdbc/DataSource" resource-ref="true"/>
  
  <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate"
  		p:dataSource-ref="dataSource"
  		p:maxRows="2000"/>
  
  <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager"
	  	p:dataSource-ref="dataSource"/>
	  	
  <bean id="dashboardDao" class="com.thomsonreuters.uscl.ereader.orchestrate.dashboard.dao.DashboardDaoImpl"
  	    p:tablePrefix="${spring.batch.table.prefix}"
  	    p:jdbcTemplate-ref="jdbcTemplate"/>
  	    
 	
</beans>
	