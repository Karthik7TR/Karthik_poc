<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<bean id="createBookController" class="com.thomsonreuters.uscl.ereader.orchestrate.dashboard.web.controller.book.CreateBookController"
		  p:environmentName-ref="environmentName"
		  p:jobRunner-ref="jobRunner"
		  p:coreService-ref="coreService"
		  p:messageSourceAccessor-ref="messageSourceAccessor"/>
		   	 
	<bean id="jobExecutionController" class="com.thomsonreuters.uscl.ereader.orchestrate.dashboard.web.controller.jobexecution.JobExecutionController"
		  p:environmentName-ref="environmentName"
		  p:jobExplorer-ref="jobExplorer"
		  p:engineContextUrl-ref="engineContextUrl">
		  <property name="validator">
		  	<bean class="com.thomsonreuters.uscl.ereader.orchestrate.dashboard.web.controller.jobexecution.JobExecutionFormValidator"/>
		  </property>
	</bean>
	
	<bean id="jobInstanceController" class="com.thomsonreuters.uscl.ereader.orchestrate.dashboard.web.controller.jobinstance.JobInstanceController"
		  p:environmentName-ref="environmentName"
		  p:jobExplorer-ref="jobExplorer"/>

	<bean id="jobSummaryController" class="com.thomsonreuters.uscl.ereader.orchestrate.dashboard.web.controller.jobsummary.JobSummaryController"
		  p:environmentName-ref="environmentName"
		  p:jobExplorer-ref="jobExplorer"
		  p:dashboardService-ref="dashboardService">
		  <property name="validator">
		  	<bean class="com.thomsonreuters.uscl.ereader.orchestrate.dashboard.web.controller.jobsummary.JobSummaryFormValidator"/>
		  </property>
	</bean>
		  
	<bean id="stepExecutionController" class="com.thomsonreuters.uscl.ereader.orchestrate.dashboard.web.controller.stepexecution.StepExecutionController"
		  p:environmentName-ref="environmentName"
		  p:jobExplorer-ref="jobExplorer"/>
	
</beans>