<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:p="http://www.springframework.org/schema/p"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Task to remove the oldest job metadata from the database repository -->
  	<bean id="cleanupTask" class="com.thomsonreuters.uscl.ereader.orchestrate.dashboard.web.scheduler.CleanupTask"
		  p:dashboardService-ref="dashboardService"
		  p:deleteJobsDaysOlderThan="90"/>
	
	<!-- Quartz manager - handles initialization and shutdown of the Quartz scheduler -->
  	<bean id="quartzManager" class="com.thomsonreuters.uscl.ereader.orchestrate.dashboard.web.scheduler.QuartzManager"
  		  p:cleanupTask-ref="cleanupTask"
  		  p:cleanupTaskRunIntervalHours="24"/>
	
</beans>