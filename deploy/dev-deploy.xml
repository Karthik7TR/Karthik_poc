  <property file="deploydev.properties"/>

  <!-- Must pass deploy_version in from the UI. -->
   <property name="deploy_version" value="" />
 
	<!-- This does all the work.  We first do a undeploy, then a deploy of hte application. -->
  <target name="fulldeploy" description="this does the full deploy of a war file">
    <sshexec host="${DEPLOY_SERVER}"
    username="${CURRENT_USER}"
    password="${CURRENT_PASSWORD}"
    trust="yes"
             
    command="cd /appserver/deployment;./${env} ${deploy_version} application=${APPLICATION} dryRun=${DRYRUN} forcedeployment=true script=./conf/workflow_content.xml username=${NODE_AGENT_USER} password=${NODE_AGENT_PASSWORD}"/>
    <!--command="cd /appserver/deployment;./deployci ${numeric_deploy_version} application=${APPLICATION} username=${NODE_AGENT_USER} password=${NODE_AGENT_PASSWORD}"/>-->
    
  </target>

</project>

