<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans 	 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">
           
  	

	<!-- Message converters and REST template for interacting with the RESTful web services -->
	<bean id="jsonObjectMapper" class="com.fasterxml.jackson.databind.ObjectMapper"/>
	<bean id="imageMetadataHttpMessageConverter" class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter"
		  p:objectMapper-ref="jsonObjectMapper"/>
	<!-- bean id="imageStreamHttpMessageConverter" class="com.thomsonreuters.uscl.ereader.gather.service.image.ImageStreamHttpMessageConverter"/ -->
	<bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
      <property name="messageConverters">
        <list>
        	<ref bean="imageMetadataHttpMessageConverter"/>
        </list>
      </property>
	</bean>
	
		<!-- Pooled Datasource -->
  	<bean id="testDataSource" class="org.apache.commons.dbcp.BasicDataSource">
    <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@(DESCRIPTION=(ADDRESS_LIST=(ADDRESS=(PROTOCOL=TCP)(HOST=c111cujctdbux-vip.int.westgroup.com)(PORT=1521))(ADDRESS=(PROTOCOL=TCP)(HOST=c111wuyctdbux-vip.int.westgroup.com)(PORT=1521)))(CONNECT_DATA=(SERVICE_NAME=ebook_dev.int.westgroup.com)))" />
		<property name="username" value="EBOOK_USER" />
		<property name="password" value="eb00k" />
		<property name="initialSize" value="3" />
		<property name="maxActive" value="8" />
  	</bean>
  	
  	<bean id="testSessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="testDataSource"/>
		<property name="hibernateProperties">
	      <props>
	        <prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
	      	<prop key="hibernate.show_sql">false</prop>
	      	<prop key="hibernate.cache.provider_class">org.hibernate.cache.HashtableCacheProvider</prop>
	      </props>
		</property>
		<property name="annotatedClasses">
		  <list>
		  	<value>com.thomsonreuters.uscl.ereader.gather.image.domain.ImageMetadataEntity</value>
		  </list>
		</property>
  	</bean>
	
  	<bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager"
		  p:sessionFactory-ref="testSessionFactory"/>
    
    <tx:annotation-driven transaction-manager="transactionManager"/>
    
	<bean id="imageDao" class="com.thomsonreuters.uscl.ereader.gather.image.dao.ImageDaoImpl">
		<constructor-arg ref="testSessionFactory"/>
	</bean>
	
	  
	<bean id="imageVerticalHttpRequestFactory" class="org.springframework.http.client.HttpComponentsClientHttpRequestFactory"
	   p:readTimeout="1800"/>
		  
		  
	<bean id="imageVerticalRestTemplateFactory" class="com.thomsonreuters.uscl.ereader.gather.image.service.ImageVerticalRestTemplateFactoryImpl"
		  p:requestFactory-ref="imageVerticalHttpRequestFactory"/>
		  
	
	  
	  <bean id="imageService" class="com.thomsonreuters.uscl.ereader.gather.image.service.ImageServiceImpl"
		  p:singletonRestTemplate-ref="restTemplate"
		  p:imageVerticalRestServiceUrl="http://image.int.legalservices.qed.westlaw.com/image"
		  p:sleepIntervalBetweenImages="500"
		  p:urlVersion="v1"
		  p:imageDao-ref="imageDao"
		  p:imageVerticalRestTemplateFactory-ref="imageVerticalRestTemplateFactory"		  
		  p:imageServiceMaxRetries="3"
		  p:imageMetadataServiceMaxRetries="3"
		  p:missingImageGuidsFileBasename="missing_image_guids.txt"/>	
	  
</beans>