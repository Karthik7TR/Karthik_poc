<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:oxm="http://www.springframework.org/schema/oxm" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
   http://www.springframework.org/schema/oxm
   http://www.springframework.org/schema/oxm/spring-oxm-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-4.0.xsd">


	<!-- Marshallers -->
	
	<oxm:jaxb2-marshaller id="jaxbDocRequestMarshaller">
		<oxm:class-to-be-bound name="com.thomsonreuters.uscl.ereader.gather.domain.GatherDocRequest"/>
	</oxm:jaxb2-marshaller>
	
	<oxm:jaxb2-marshaller id="jaxbImgRequestMarshaller">
		<oxm:class-to-be-bound name="com.thomsonreuters.uscl.ereader.gather.domain.GatherImgRequest"/>
	</oxm:jaxb2-marshaller>
	
	<oxm:jaxb2-marshaller id="jaxbTocRequestMarshaller">
		<oxm:class-to-be-bound name="com.thomsonreuters.uscl.ereader.gather.domain.GatherTocRequest"/>
	</oxm:jaxb2-marshaller>
	
	<oxm:jaxb2-marshaller id="jaxbNortRequestMarshaller">
		<oxm:class-to-be-bound name="com.thomsonreuters.uscl.ereader.gather.domain.GatherNortRequest"/>
	</oxm:jaxb2-marshaller>
	
	<oxm:jaxb2-marshaller id="jaxbResponseMarshaller">
		<oxm:class-to-be-bound name="com.thomsonreuters.uscl.ereader.gather.domain.GatherResponse"/>
	</oxm:jaxb2-marshaller>

	<!-- Message Converters (for use in RestTemplate(s)) -->

	<!-- JSON mapper (for image service) -->
	<bean id="jsonObjectMapper" class="com.fasterxml.jackson.databind.ObjectMapper" />
	<bean id="jsonHttpMessageConverter"
		class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter"
		p:objectMapper-ref="jsonObjectMapper" />

	<bean id="docRequestMessageConverter"
		class="org.springframework.http.converter.xml.MarshallingHttpMessageConverter">
		<property name="marshaller" ref="jaxbDocRequestMarshaller" />
		<property name="unmarshaller" ref="jaxbDocRequestMarshaller" />
		<property name="supportedMediaTypes">
			<list>
				<value>text/xml</value>
				<value>application/xml</value>
			</list>
		</property>
	</bean>

	<bean id="imgRequestMessageConverter"
		class="org.springframework.http.converter.xml.MarshallingHttpMessageConverter">
		<property name="marshaller" ref="jaxbImgRequestMarshaller" />
		<property name="unmarshaller" ref="jaxbImgRequestMarshaller" />
		<property name="supportedMediaTypes">
			<list>
				<value>text/xml</value>
				<value>application/xml</value>
			</list>
		</property>
	</bean>

	<bean id="tocRequestMessageConverter"
		class="org.springframework.http.converter.xml.MarshallingHttpMessageConverter">
		<property name="marshaller" ref="jaxbTocRequestMarshaller" />
		<property name="unmarshaller" ref="jaxbTocRequestMarshaller" />
		<property name="supportedMediaTypes">
			<list>
				<value>text/xml</value>
				<value>application/xml</value>
			</list>
		</property>
	</bean>

	<bean id="nortRequestMessageConverter"
		class="org.springframework.http.converter.xml.MarshallingHttpMessageConverter">
		<property name="marshaller" ref="jaxbNortRequestMarshaller" />
		<property name="unmarshaller" ref="jaxbNortRequestMarshaller" />
		<property name="supportedMediaTypes">
			<list>
				<value>text/xml</value>
				<value>application/xml</value>
			</list>
		</property>
	</bean>

	<bean id="gatherResponseMessageConverter"
		class="org.springframework.http.converter.xml.MarshallingHttpMessageConverter">
		<property name="marshaller" ref="jaxbResponseMarshaller" />
		<property name="unmarshaller" ref="jaxbResponseMarshaller" />
	</bean>

	<!-- REST Template used to communicate with the Gather REST service -->
	<bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
		<property name="messageConverters">
			<list>
				<ref bean="docRequestMessageConverter" />
				<ref bean="imgRequestMessageConverter" />
				<ref bean="tocRequestMessageConverter" />
				<ref bean="nortRequestMessageConverter" />
				<ref bean="gatherResponseMessageConverter" />
				<ref bean="simpleResponseMessageConverter" />
				<ref bean="jsonHttpMessageConverter" />
			</list>
		</property>
	</bean>

	<!-- REST Template used to communicate with the Image vertical REST service 
		when fetching image metadata. A custom template is used to download image 
		file bytes. -->
	<bean id="imageJsonRestTemplate" class="org.springframework.web.client.RestTemplate">
		<property name="messageConverters">
			<list>
				<ref bean="jsonHttpMessageConverter" />
			</list>
		</property>
	</bean>

	<!-- Views to marshal the object for return to client -->

	<bean id="miscConfigResponseView"
		class="org.springframework.web.servlet.view.xml.MarshallingView">
		<property name="marshaller" ref="miscConfigMarshaller" />
		<property name="modelKey" value="miscConfig" />
		<property name="contentType" value="text/xml" />
	</bean>
	<bean id="jobThrottleConfigResponseView"
		class="org.springframework.web.servlet.view.xml.MarshallingView">
		<property name="marshaller" ref="jobThrottleConfigMarshaller" />
		<property name="modelKey" value="jobThrottleConfig" />
		<property name="contentType" value="text/xml" />
	</bean>

</beans> 
