<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
  	


	<!-- Marshallers -->

  	<bean id="jibxDocRequestMarshaller" class="org.springframework.oxm.jibx.JibxMarshaller">
        <property name="targetClass" value="com.thomsonreuters.uscl.ereader.gather.domain.GatherDocRequest"/>
        <property name="encoding" value="UTF-8"/>
    </bean>
  	<bean id="jibxTocRequestMarshaller" class="org.springframework.oxm.jibx.JibxMarshaller">
        <property name="targetClass" value="com.thomsonreuters.uscl.ereader.gather.domain.GatherTocRequest"/>
        <property name="encoding" value="UTF-8"/>
     </bean>
  	<bean id="jibxNortRequestMarshaller" class="org.springframework.oxm.jibx.JibxMarshaller">
        <property name="targetClass" value="com.thomsonreuters.uscl.ereader.gather.domain.GatherNortRequest"/>
        <property name="encoding" value="UTF-8"/>
     </bean>
	<bean id="jibxGatherResponseMarshaller" class="org.springframework.oxm.jibx.JibxMarshaller">
        <property name="targetClass" value="com.thomsonreuters.uscl.ereader.gather.domain.GatherResponse"/>
        <property name="encoding" value="UTF-8"/>
    </bean>

	<!-- Message Converters (for use in RestTemplate(s)) -->
	
	<!-- JSON mapper (for image service) -->
	<bean id="jsonObjectMapper" class="org.codehaus.jackson.map.ObjectMapper"/>
	<bean id="jsonHttpMessageConverter" class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter"
		  p:objectMapper-ref="jsonObjectMapper"/>
  	
	<bean id="docRequestMessageConverter" class="org.springframework.http.converter.xml.MarshallingHttpMessageConverter">
        <property name="marshaller" ref="jibxDocRequestMarshaller" />
        <property name="unmarshaller" ref="jibxDocRequestMarshaller" />
        <property name="supportedMediaTypes">
            <list>
                <value>text/xml</value>
                <value>application/xml</value>
            </list>
        </property>
    </bean>
  
  	<bean id="tocRequestMessageConverter" class="org.springframework.http.converter.xml.MarshallingHttpMessageConverter">
        <property name="marshaller" ref="jibxTocRequestMarshaller" />
        <property name="unmarshaller" ref="jibxTocRequestMarshaller" />
        <property name="supportedMediaTypes">
            <list>
                <value>text/xml</value>
                <value>application/xml</value>
            </list>
        </property>
    </bean>
    
    <bean id="nortRequestMessageConverter" class="org.springframework.http.converter.xml.MarshallingHttpMessageConverter">
        <property name="marshaller" ref="jibxNortRequestMarshaller" />
        <property name="unmarshaller" ref="jibxNortRequestMarshaller" />
        <property name="supportedMediaTypes">
            <list>
                <value>text/xml</value>
                <value>application/xml</value>
            </list>
        </property>
    </bean>

  	<bean id="gatherResponseMessageConverter" class="org.springframework.http.converter.xml.MarshallingHttpMessageConverter">
        <property name="marshaller" ref="jibxGatherResponseMarshaller" />
        <property name="unmarshaller" ref="jibxGatherResponseMarshaller" />
    </bean>
    
	<!-- REST Template used to communicate with the Gather REST service -->
	<bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
      <property name="messageConverters">
        <list>
          <ref bean="docRequestMessageConverter"/>
          <ref bean="tocRequestMessageConverter"/>
          <ref bean="nortRequestMessageConverter"/>
          <ref bean="gatherResponseMessageConverter"/>
          <ref bean="simpleResponseMessageConverter"/>
        </list>
      </property>
	</bean>
	
	<!-- REST Template used to communicate with the Image vertical REST service when fetching image metadata.
		 A custom template is used to download image file bytes. -->
	<bean id="imageJsonRestTemplate" class="org.springframework.web.client.RestTemplate">
      <property name="messageConverters">
        <list>
          <ref bean="jsonHttpMessageConverter"/>
        </list>
      </property>
	</bean>
	
	 <!-- Views to marshal the object for return to client -->

  	<bean id ="miscConfigResponseView" class="org.springframework.web.servlet.view.xml.MarshallingView" >
      <property name="marshaller" ref="miscConfigMarshaller" />
      <property name="modelKey" value="miscConfig"/>
      <property name="contentType" value="text/xml"/>
  	</bean>
  	<bean id ="jobThrottleConfigResponseView" class="org.springframework.web.servlet.view.xml.MarshallingView" >
      <property name="marshaller" ref="jobThrottleConfigMarshaller" />
      <property name="modelKey" value="jobThrottleConfig"/>
      <property name="contentType" value="text/xml"/>
  	</bean>

</beans> 
