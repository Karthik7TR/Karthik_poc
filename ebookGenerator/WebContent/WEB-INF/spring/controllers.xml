<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="homeController" class="com.thomsonreuters.uscl.ereader.orchestrate.engine.web.controller.HomeController">
		<constructor-arg ref="environmentName"/>
	</bean>
	
	<!-- Handles job STOP and RESTART web service (REST) operations -->
	<bean id="operationsController" class="com.thomsonreuters.uscl.ereader.orchestrate.engine.web.controller.OperationsController"
		  p:engineService-ref="engineService"
		  p:messageSourceAccessor-ref="messageSourceAccessor"/>
		  
	<bean id="jobCleanupController" class="com.thomsonreuters.uscl.ereader.orchestrate.engine.web.controller.JobCleanupController" 
	p:jobCleanupService-ref ="jobCleanupService"
	p:serverAccessService-ref ="serverAccessService"
	p:emailGroup="${kill.email.group}"/>
		 

</beans>