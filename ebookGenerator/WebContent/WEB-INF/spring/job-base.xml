<beans:beans xmlns="http://www.springframework.org/schema/batch"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans 	 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
           http://www.springframework.org/schema/batch   http://www.springframework.org/schema/batch/spring-batch-3.0.xsd">

	<beans:bean id="baseStep" abstract="true" scope="step"
		class="com.thomsonreuters.uscl.ereader.common.step.BaseStepImpl" />
	<beans:bean id="bookStep" abstract="true" scope="step"
		class="com.thomsonreuters.uscl.ereader.common.step.BookStepImpl" />
	<beans:bean id="assembleStep" abstract="true" scope="step"
		class="com.thomsonreuters.uscl.ereader.common.assemble.step.BaseAssembleStep" />
	<beans:bean id="deliverStep" abstract="true" scope="step"
		class="com.thomsonreuters.uscl.ereader.common.deliver.step.BaseDeliverStep" />
	<beans:bean id="groupStep" abstract="true" scope="step"
		class="com.thomsonreuters.uscl.ereader.common.group.step.BaseGroupStep" />

	<beans:bean id="outageStepAspect"
		class="com.thomsonreuters.uscl.ereader.common.outage.step.OutageStepAspect" />

	<beans:bean id="sendNotificationStepAspect"
		class="com.thomsonreuters.uscl.ereader.common.notification.step.SendNotificationStepAspect" />
	<beans:bean id="stepFailureNotificationServiceFactory"
		class="com.thomsonreuters.uscl.ereader.common.notification.service.StepFailureNotificationServiceFactory" />
	<beans:bean id="defaultStepFailureNotificationService"
		class="com.thomsonreuters.uscl.ereader.common.notification.service.DefaultStepFailureNotificationServiceImpl" />

	<beans:bean id="publishingStatusStepAspect"
		class="com.thomsonreuters.uscl.ereader.common.publishingstatus.step.PublishingStatusStepAspect" />
	<beans:bean id="publishingStatusUpdateServiceFactory"
		class="com.thomsonreuters.uscl.ereader.common.publishingstatus.service.PublishingStatusUpdateServiceFactory" />
	<beans:bean id="basePublishingStatusUpdateService" abstract="true"
		class="com.thomsonreuters.uscl.ereader.common.publishingstatus.service.BasePublishingStatusUpdateService" />
	<beans:bean id="generalPublishingStatusUpdateService"
		parent="basePublishingStatusUpdateService"
		class="com.thomsonreuters.uscl.ereader.common.publishingstatus.service.GeneralPublishingStatusUpdateService" />
	<beans:bean id="initializePublishingStatusUpdateService"
		parent="basePublishingStatusUpdateService"
		class="com.thomsonreuters.uscl.ereader.common.publishingstatus.service.InitializePublishingStatusUpdateService" />
	<beans:bean id="assemblePublishingStatusUpdateService"
		parent="basePublishingStatusUpdateService"
		class="com.thomsonreuters.uscl.ereader.common.publishingstatus.service.AssemblePublishingStatusUpdateService" />
	<beans:bean id="titleDocPublishingStatusUpdateService"
		parent="basePublishingStatusUpdateService"
		class="com.thomsonreuters.uscl.ereader.common.publishingstatus.service.TitleDocPublishingStatusUpdateService" />
	<beans:bean id="deliverPublishingStatusUpdateService"
		parent="basePublishingStatusUpdateService"
		class="com.thomsonreuters.uscl.ereader.common.publishingstatus.service.DeliverPublishingStatusUpdateService" />
	<beans:bean id="groupPublishingStatusUpdateService" parent="basePublishingStatusUpdateService"
		class="com.thomsonreuters.uscl.ereader.common.publishingstatus.service.GroupPublishingStatusUpdateService" />

	<beans:bean id="proviewRetryAspect"
		class="com.thomsonreuters.uscl.ereader.common.proview.ProviewRetryAspect" />
	<beans:bean id="proviewHandlerWithRetry"
		class="com.thomsonreuters.uscl.ereader.common.deliver.service.ProviewHandlerWithRetryImpl" />
	<beans:bean id="groupServiceWithRetry"
		class="com.thomsonreuters.uscl.ereader.common.group.service.GroupServiceWithRetryImpl" />

	<beans:bean id="splitNodesInfoService"
		class="com.thomsonreuters.uscl.ereader.common.group.service.SplitNodesInfoServiceImpl" />
</beans:beans>