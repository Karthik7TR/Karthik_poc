<binding>

	<!-- A simle REST service general response to a REST request -->
    <mapping name="simpleRestServiceResponse" class="com.thomsonreuters.uscl.ereader.core.job.domain.SimpleRestServiceResponse">
        <value name="id" field="id" usage="optional"/>
        <value name="success" field="success" usage="required"/>
        <value name="message" field="message" usage="optional"/>
    </mapping>
    
    <!-- Application configuration -->
    <mapping name="jobThrottleConfig" class="com.thomsonreuters.uscl.ereader.core.job.domain.JobThrottleConfig">
        <value name="coreThreadPoolSize" field="coreThreadPoolSize" usage="required"/>
        <value name="stepThrottleEnabled" field="stepThrottleEnabled" usage="required"/>
        <value name="throttleStepName" field="throttleStepName" usage="required"/>
        <value name="throtttleStepMaxJobs" field="throtttleStepMaxJobs" usage="required"/>
    </mapping>
    <mapping name="miscConfig" class="com.thomsonreuters.uscl.ereader.core.job.domain.MiscConfig">
        <value name="rootLogLevel" field="rootLogLevel" usage="required"/>
        <value name="appLogLevel" field="appLogLevel" usage="required"/>
        <value name="novusEnvironment" field="novusEnvironment" usage="required"/>
        <value name="proviewHostname" field="proviewHostname" usage="required"/>
        <value name="disableExistingSingleTitleSplit" field="disableExistingSingleTitleSplit" usage="optional"/>
        <value name="maxSplitParts" field="maxSplitParts" usage="required"/>
    </mapping>
    
    <!-- Gather service REST response body for Toc and Doc requests -->
    <mapping name="gatherResponse" class="com.thomsonreuters.uscl.ereader.gather.domain.GatherResponse">
        <value name="errorCode" field="errorCode" usage="required"/>
        <value name="errorMessage" field="errorMessage" usage="optional"/>
        <value name="docCount" field="docCount" usage="optional"/>
        <value name="docCount2" field="docCount2" usage="optional"/>
        <value name="nodeCount" field="nodeCount" usage="optional"/>
        <value name="skipCount" field="skipCount" usage="optional"/>
        <value name="retryCount" field="retryCount" usage="optional"/>
        <value name="retryCount2" field="retryCount2" usage="optional"/>
        <value name="expectedCount" field="expectedCount" usage="optional"/>
        <value name="publishStatus" field="publishStatus" usage="optional"/>
        <structure name="splitGuids" usage="optional">
	    	<collection field="splitTocGuidList" usage="optional">
				<value name="guid" type="java.lang.String" usage="optional"/>
			</collection>
		</structure>
		<value name="findSplitsAgain" field="findSplitsAgain" usage="optional"/>
		<structure name="dupTocGuids" usage="optional">
	    	<collection field="duplicateTocGuids" usage="optional">
				<value name="guid" type="java.lang.String" usage="optional"/>
			</collection>
		</structure>	
		<collection field="imageMetadataList"  usage="optional">
			<structure  name="imgMetadataInfo" type="com.thomsonreuters.uscl.ereader.gather.util.ImgMetadataInfo" >
				<value name="mimeType" field="mimeType" usage="optional"/>
				<value name="size" field="size" usage="optional"/>
				<value name="dimUnit" field="dimUnit" usage="optional"/>
				<value name="height" field="height" usage="optional"/>
				<value name="width" field="width" usage="optional"/>
				<value name="dpi" field="dpi" usage="optional"/>
				<value name="imgGuid" field="imgGuid" usage="optional"/>
				<value name="docGuid" field="docGuid" usage="optional"/>
			</structure>
		</collection>
    </mapping>
    

    <mapping name="gatherImgRequest" class="com.thomsonreuters.uscl.ereader.gather.domain.GatherImgRequest">
		<value name="dynamicImageDirectory" field="dynamicImageDirectory" usage="required"/>
		<value name="imgToDocManifestFile" field="imgToDocManifestFile" usage="required"/>
		<value name="isFinalStage" field="isFinalStage" usage="required"/>
     </mapping>
    
    <!-- Gather Doc service REST request body -->
    <mapping name="gatherDocRequest" class="com.thomsonreuters.uscl.ereader.gather.domain.GatherDocRequest">
	    <structure name="docGuids" usage="required">
	    	<collection field="guids" usage="required">
				<value name="guid" type="java.lang.String" usage="required"/>
			</collection>
		</structure>
        <value name="collectionName" field="collectionName" usage="optional"/>
        <value name="contentDestinationDirectory" field="contentDestinationDirectory" usage="required"/>
        <value name="metadataDestinationDirectory" field="metadataDestinationDirectory" usage="required"/>
        <value name="isFinalStage" field="isFinalStage" usage="required"/>
        <value name="useReloadContent" field="useReloadContent" usage="required"/>
    </mapping>

	<!-- Gather table of contents (toc) service REST request body -->
    <mapping name="gatherTocRequest" class="com.thomsonreuters.uscl.ereader.gather.domain.GatherTocRequest">
        <value name="guid" field="guid" usage="required"/>
        <value name="collectionName" field="collectionName" usage="required"/>
        <value name="tocFile" field="tocFile" usage="required"/>
	    	<collection field="excludeDocuments" usage="optional">
		    	<structure name="excludeDocument" type="com.thomsonreuters.uscl.ereader.core.book.domain.ExcludeDocument" usage="optional" value-style="attribute">
		    		<value name="documentGuid" field="documentGuid" usage="required"/>
		    		<value name="note" field="note" usage="required"/>
		    		<value name="lastUpdated" field="lastUpdated" usage="required"/>
		    	</structure>
	    	</collection>
	    	<collection field="renameTocEntries" usage="optional">
		    	<structure name="renameTocEntry" type="com.thomsonreuters.uscl.ereader.core.book.domain.RenameTocEntry" usage="optional" value-style="attribute">
		    		<value name="tocGuid" field="tocGuid" usage="required"/>
		    		<value name="oldLabel" field="oldLabel" usage="required"/>
		    		<value name="newLabel" field="newLabel" usage="required"/>
		    		<value name="note" field="note" usage="required"/>
		    		<value name="lastUpdated" field="lastUpdated" usage="required"/>
		    	</structure>
	    	</collection>  
	    <value name="isFinalStage" field="isFinalStage" usage="required"/>
	    <structure name="splitGuids" usage="optional">
	    	<collection field="splitTocGuidList" usage="optional">
				<value name="guid" type="java.lang.String" usage="optional"/>
			</collection>
		</structure>
		<value name="thresholdValue" field="thresholdValue" usage="optional"/>
    </mapping>
    
    <!-- Gather table of contents (nort) service REST request body -->
    <mapping name="gatherNortRequest" class="com.thomsonreuters.uscl.ereader.gather.domain.GatherNortRequest">
        <value name="domainName" field="domainName" usage="required"/>
        <value name="expressionFilter" field="expressionFilter" usage="required"/>
        <value name="nortFile" field="nortFile" usage="required"/>
		<value name="cutoffDate" field="cutoffDate" usage="optional"/>
	    	<collection field="excludeDocuments" usage="optional">
		    	<structure name="excludeDocument" type="com.thomsonreuters.uscl.ereader.core.book.domain.ExcludeDocument" usage="optional" value-style="attribute">
		    		<value name="documentGuid" field="documentGuid" usage="required"/>
		    		<value name="note" field="note" usage="required"/>
		    		<value name="lastUpdated" field="lastUpdated" usage="required"/>
		    	</structure>
	    	</collection>
	    	<collection field="renameTocEntries" usage="optional">
		    	<structure name="renameTocEntry" type="com.thomsonreuters.uscl.ereader.core.book.domain.RenameTocEntry" usage="optional" value-style="attribute">
		    		<value name="tocGuid" field="tocGuid" usage="required"/>
		    		<value name="oldLabel" field="oldLabel" usage="required"/>
		    		<value name="newLabel" field="newLabel" usage="required"/>
		    		<value name="note" field="note" usage="required"/>
		    		<value name="lastUpdated" field="lastUpdated" usage="required"/>
		    	</structure>
	    	</collection> 
	    <value name="isFinalStage" field="isFinalStage" usage="required"/>
	    <value name="useReloadContent" field="useReloadContent" usage="required"/>
	    <structure name="splitGuids" usage="optional">
	    	<collection field="splitTocGuidList" usage="optional">
				<value name="guid" type="java.lang.String" usage="optional"/>
			</collection>
		</structure>
		<value name="thresholdValue" field="thresholdValue" usage="optional"/>
    </mapping>
    
    <!-- Planned Outage -->
    <mapping name="outage" class="com.thomsonreuters.uscl.ereader.core.outage.domain.PlannedOutage">
        <value name="id" field="id" usage="required"/>
       	<structure name="outageType" field="outageType" usage="optional">
	   		<value name="id" field="id" usage="optional"/>
	   		<value name="system" field="system" usage="optional"/>
	   		<value name="subSystem" field="subSystem" usage="optional"/>
	   		<value name="lastUpdated" field="lastUpdated" usage="optional"/>
	   	</structure>
        <value name="startTime" field="startTime" usage="optional"/>
		<value name="endTime" field="endTime" usage="optional"/>
		<value name="reason" field="reason" usage="optional"/>
		<value name="systemImpactDescription" field="systemImpactDescription" usage="optional"/>
		<value name="serversImpacted" field="serversImpacted" usage="optional"/>
		<value name="notificationEmailSent" field="notificationEmailSent" usage="optional"/>
		<value name="allClearEmailSent" field="allClearEmailSent" usage="optional"/>
		<value name="updatedBy" field="updatedBy" usage="optional"/>
		<value name="lastUpdated" field="lastUpdated" usage="optional"/>
		<value name="operation" field="operation" usage="required"/>
    </mapping>
    
  
</binding>